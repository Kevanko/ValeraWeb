using Valera.Api.Models;
using Xunit;

public class ValeraTests
{
    [Fact]
    public void GoToWork_WhenAllowed_UpdatesStats()
    {
        var v = new Valera(health:100, alcohol:20, cheerfulness:0, fatigue:0, money:0m);
        var ok = v.GoToWork();
        Assert.True(ok);
        Assert.Equal(-5, v.Cheerfulness);
        Assert.Equal(0, v.Alcohol);
        Assert.Equal(70, v.Fatigue);
        Assert.Equal(100m, v.Money);
    }

    [Fact]
    public void GoToWork_WhenNotAllowed_ReturnsFalse()
    {
        var v = new Valera(alcohol:60, fatigue:0);
        Assert.False(v.GoToWork());
    }
}
EOF
